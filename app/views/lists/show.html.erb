<div class="banner" >
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>

<div>
  <p><%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-flat" %></p>
</div>
<div>
  <ul class="list-group">
    <% @list.bookmarks.each do |bookmark| %>
      <li class="list-group-item">
        <div class="card-product">
          <%= image_tag bookmark.movie.poster_url, class: "img" %>
          <div class="card-product-infos">
            <h2><%= bookmark.movie.title %> - <%= bookmark.movie.rating %>‚≠ê</h2>
            <p><%= bookmark.movie.overview %></p>
          </div>
          <div class="card-product-footer">
            <div>
              <%= bookmark.comment %>
            </div>
            <div>
              <%= link_to "Delete", destroy_list_bookmark_path(@list) %>
            </div>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>
<br>
<p><%= link_to "Back to index", lists_path, class: "btn btn-primary" %></p>
